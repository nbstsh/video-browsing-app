doctype html
html
  include includes/head.pug
  body

    .display 
      .display__video-box#video-box
        video.display__video#video(autobuffer autoplay controls loop muted width="100%")
          source#source

    mixin listItems(items)
      each item in items
        td.program__thumnail(class=item.time)
          img(src="" alt="" data-path="" data-type data-videoId)
    
    mixin list(dayObj)
      tr.program__week(class=dayObj.day)
        +listItems(dayObj.times)

    //- create tr elements for thumnails
    mixin scheduleTable(week)
      each dayObj in week
          +list(dayObj)

    //- create tr element to show time
    mixin timeList(times)
      tr.program__time-list
        each time in times
          td.program__time-item #{time}
    
    .program 
      table.program__table
        tbody
          +timeList(times)
          +scheduleTable(week)
    
    

